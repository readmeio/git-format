{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ReadMe frontmatter shapes",
  "oneOf": [
    {
      "title": "Page",
      "description": "This is the shape for files within the `docs/` directory.",
      "$ref": "#/defs/filetype-page"
    },
    {
      "title": "Custom Page",
      "description": "This is the shape for files within the `custom_pages/` directory.",
      "allOf": [
        {
          "$ref": "#/defs/common-page"
        },
        {
          "type": "object",
          "properties": {
            "fullscreen": {
              "type": ["boolean", "null"]
            }
          }
        }
      ],
      "required": ["title"],
      "not": {
        "type": "object",
        "properties": {
          "deprecated": {
            "type": "boolean"
          }
        },
        "description": "Custom pages have everything that a common page has except that they can't be deprecated."
      }
    },
    {
      "title": "API Reference",
      "description": "This is the shape for files within the `reference/` directory.",
      "allOf": [
        {
          "$ref": "#/defs/filetype-page"
        },
        {
          "type": "object",
          "properties": {
            "api": {
              "type": ["object", "null"],
              "properties": {
                "file": {
                  "type": "string"
                },
                "operationId": {
                  "type": "string"
                },
                "webhook": {
                  "type": ["boolean", "null"]
                }
              },
              "required": ["file", "operationId"],
              "description": "Information about the API operation that this page is documenting. Setting this to `null` will detach it from the API operation and make it a standard page."
            },
            "api_config": {
              "type": ["string", "null"],
              "enum": ["authentication", "getting-started", "my-requests"],
              "description": "Describes a Reference config page of a particular type."
            },
            "recipes": {
              "type": ["array", "null"],
              "items": {
                "type": "string"
              },
              "description": "A collection of recipes that are related to this API operation."
            }
          }
        }
      ]
    },
    {
      "title": "Recipe",
      "description": "This is the shape for files within the `recipes/` directory.",
      "allOf": [
        {
          "$ref": "#/defs/core"
        },
        {
          "type": "object",
          "properties": {
            "description": {
              "type": ["string", "null"]
            },
            "recipe": {
              "type": "object",
              "properties": {
                "color": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "icon": {
                  "type": "string"
                }
              },
              "required": ["color", "icon"]
            }
          }
        }
      ],
      "required": ["title", "recipe"]
    },
    {
      "title": "Custom Block",
      "description": "This is the shape for custom blocks in the `custom_blocks/` directory.",
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"]
        }
      },
      "required": ["name"]
    }
  ],
  "defs": {
    "core": {
      "title": "Core properties that are available on all file types.",
      "type": "object",
      "properties": {
        "hidden": {
          "type": ["boolean", "null"]
        },
        "title": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "title": "Properties that control file metadata.",
      "type": "object",
      "properties": {
        "description": {
          "type": ["string", "null"]
        },
        "image": {
          "type": ["string", "null"]
        },
        "keywords": {
          "type": ["array", "null"],
          "items": {
            "type": "string"
          }
        },
        "robots": {
          "type": ["string", "null"],
          "enum": ["index", "noindex"]
        },
        "title": {
          "type": ["string", "null"],
          "description": "This is the title that's used for SEO metadata."
        }
      }
    },
    "common-page": {
      "allOf": [
        {
          "$ref": "#/defs/core"
        },
        {
          "type": "object",
          "properties": {
            "deprecated": {
              "type": ["boolean", "null"]
            },
            "excerpt": {
              "type": ["string", "null"]
            },
            "icon": {
              "type": ["string", "null"]
            },
            "metadata": {
              "$ref": "#/defs/metadata"
            },
            "next": {
              "type": "object",
              "properties": {
                "description": {
                  "type": ["string", "null"]
                },
                "pages": {
                  "type": ["array", "null"],
                  "items": {
                    "oneOf": [
                      {
                        "title": "The next page is a standard, API Reference, changelog, or custom page.",
                        "type": "object",
                        "properties": {
                          "slug": {
                            "type": "string"
                          },
                          "title": {
                            "type": ["string", "null"]
                          },
                          "type": {
                            "type": "string",
                            "enum": ["basic", "endpoint", "changelog", "custom_page"]
                          }
                        },
                        "required": ["slug", "type"]
                      },
                      {
                        "title": "The next page is a link to another URL.",
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": ["string", "null"]
                          },
                          "type": {
                            "const": "link"
                          },
                          "url": {
                            "type": "string",
                            "format": "uri"
                          }
                        },
                        "required": ["type", "url"]
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      ]
    },
    "filetype-page": {
      "allOf": [
        {
          "$ref": "#/defs/common-page"
        },
        {
          "type": "object",
          "properties": {
            "link": {
              "type": ["object", "null"],
              "properties": {
                "new_tab": {
                  "type": ["boolean", "null"]
                },
                "url": {
                  "type": ["string", "null"]
                }
              },
              "description": "Information about where this page should redirect to. Setting this to `null` will make the page a standard page."
            }
          }
        }
      ],
      "required": ["title"]
    }
  }
}
